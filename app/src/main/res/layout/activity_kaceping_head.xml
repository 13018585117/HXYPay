<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    >
    <RelativeLayout
        android:id="@+id/rl_kcpTop"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/head_kcp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已测评银行卡张数"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >
                <com.newcaoguo.easyrollingnumber.view.ScrollingDigitalAnimation
                    android:id="@+id/tv_count1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="28sp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/shape_kcp_count"
                    />
                <com.newcaoguo.easyrollingnumber.view.ScrollingDigitalAnimation
                    android:id="@+id/tv_count2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="28sp"
                    android:text="1"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/shape_kcp_count"
                    />
                <com.newcaoguo.easyrollingnumber.view.ScrollingDigitalAnimation
                    android:id="@+id/tv_count3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="28sp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_kcp_count"
                    />
                <com.newcaoguo.easyrollingnumber.view.ScrollingDigitalAnimation
                    android:id="@+id/tv_count4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="28sp"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_kcp_count"
                    />
                <com.newcaoguo.easyrollingnumber.view.ScrollingDigitalAnimation
                    android:id="@+id/tv_count5"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="28sp"
                    android:text="1"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/shape_kcp_count"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical|left"
                android:orientation="horizontal"
                >
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@drawable/jiangtou_fff"
                />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="卡测评"
                android:textSize="16sp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/tv_kcpJL"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="记录"
                android:padding="15dp"
                android:textSize="16sp"
                android:textColor="#fff"
                />
        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/rl_kcpTop"
        android:layout_marginTop="-40dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_home_more"
        >
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90%的用户不了解什么是银行卡测评"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginTop="15dp"
            android:text="银行卡老是不提额？\n我是银联什么样的客户？\n消费的行业、笔数合理吗？"
            android:paddingBottom="15dp"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="#888888"
            />
        <ImageView
            android:layout_width="86dp"
            android:layout_height="100dp"
            android:src="@drawable/question"
            android:layout_toRightOf="@id/tv_2"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@id/tv_2"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_home_more"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/xiaofeiqingkuang"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费情况"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="#666666"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/xiaofeixingweitezheng"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费行为特征"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/xiaofeileixingfeixi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费类型分析"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/jiedaixingwei"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借贷行为"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/fengxiansaomiao"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风险扫描"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/xiaofeileixingfeixi"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费类型分析"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:textColor="#666666"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/payBtn"
        android:layout_below="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_btn_login_selector"
        android:text="去测评"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
