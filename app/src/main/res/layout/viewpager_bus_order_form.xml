<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_bankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行"
            android:textSize="15sp"
            android:layout_marginLeft="16dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" -- "
            android:textSize="15sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_commodity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="周黑鸭50"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-12-20 13:20"
            android:textColor="#A6A6A6"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26660"
                android:textSize="15sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A6A6A6"
                android:textSize="12sp"
                android:text="使用积分"
                android:layout_marginTop="7.5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26.50"
                android:textSize="15sp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A6A6A6"
                android:textSize="12sp"
                android:text="兑换金"
                android:layout_marginTop="7.5dp"
                />
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="5dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="审核中"
                android:background="#ccc"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14.5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驳回原因："
            android:layout_marginLeft="16dp"
            android:textColor="#E92626"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="16dp"
            android:textColor="#E92626"
            android:textSize="12sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffececec"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_dingdan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="12345645646"
            android:textColor="#A6A6A6"
            android:textIsSelectable="true"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/but_kf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_bus_order_but"
            android:text="联系客服"
            android:textColor="#fff"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/but_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_bus_order_but"
            android:text="复制"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>
