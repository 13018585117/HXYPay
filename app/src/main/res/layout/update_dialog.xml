<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_home_more"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/update_bg"
                />
            <Button
                android:id="@+id/no"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/update_close"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="25dp"
                android:layout_marginTop="66dp"
                android:textSize="28sp"
                android:textColor="#ffffff"
                />
        </RelativeLayout>




    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本更新提示"
        android:textColor="#555555"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        />


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="110dp">
       <TextView
           android:id="@+id/message"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#666666"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="8dp"
           android:textSize="15sp"
           android:text="1.新增功能\n\n2.开通新渠道\n\n3.修复已知Bug"
           />
   </ScrollView>
        <TextView
            android:id="@+id/statusTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
           />
        <ProgressBar
            android:id="@+id/pb"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"
                />
            <TextView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="立刻更新"
                android:textSize="17sp"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:textColor="@color/selecer_color_update"
                />
            <TextView
                android:id="@+id/tv_hulue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忽略此版本"
                android:visibility="gone"
                android:layout_below="@id/yes"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/selecer_color_mall_more"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
