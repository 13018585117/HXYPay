<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D6D9DE"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#333333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/money_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入金额"
                android:maxLength="6"
                android:textColor="#333333"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_com"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/finish_selector"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="1"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="2"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="3"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="4"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="5"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="6"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="7"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="8"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="9"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_null"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text=""
                android:textColor="#5c5c5c"
                android:textSize="23sp"
                android:visibility="invisible" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/key_selector"
                android:text="0"
                android:textColor="#5c5c5c"
                android:textSize="23sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="50dp" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/delete_selector"
                android:src="@drawable/delete" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

