<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/head_layout" />

    <android.support.design.widget.TabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home_viewpager_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        app:tabIndicatorColor="@color/text_e72b2a_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/text_e72b2a_color"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/text_333333_color" />

    <TextView style="@style/line_horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

</LinearLayout>