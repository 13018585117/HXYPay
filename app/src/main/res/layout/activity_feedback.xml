<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_color"
    android:orientation="vertical"
    >
    <include layout="@layout/head_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/layout_bg_gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请填写以下内容以方便我们及时联系您："
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape_feedback_gray"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="称呼"
        android:textSize="15sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape_feedback_gray"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="手机号码"
        android:textSize="15sp"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_feedback_gray"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="反馈内容"
        android:gravity="left"
        android:lines="12"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <Button
        android:id="@+id/but_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/corner_btn_login_selector"
        android:text="提交"
        android:layout_marginTop="35dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:textSize="18sp"
        android:textColor="#fff"
        />
</LinearLayout>
