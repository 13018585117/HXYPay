<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/share_bg_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/text_wx_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_wx"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/text_333333_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_wx_friend_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_wx_friend"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/text_333333_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_qq_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/text_333333_color"
                android:textSize="15sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/text_qq_friend_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_qq_friend"
                android:gravity="center"
                android:text="QQ空间"
                android:textColor="@color/text_333333_color"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/corner_bg_selector"
            android:text="取消"
            android:textColor="#007aff"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>