<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <stroke
                android:width="1dip"
                android:color="#e82c2b" />

            <solid android:color="#00000000" />

            <corners android:radius="8dip" />
        </shape>
    </item>
    <item
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp">
        <shape>
            <solid android:color="#00000000" />

            <corners android:radius="8dip" />

            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
        </shape>
    </item>

</layer-list>